{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": [
            "**/.svelte-kit",
            "**/.git",
            "**/build",
            "**/.gitignore",
            "**/dist",
            "**/node_modules"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120,
        "attributePosition": "multiline"
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "ignore": [
            "**/*.d.ts",
            "**/node_modules"
        ],
        "rules": {
            "recommended": true,
            "style": {
                "useConst": "off",
                "useImportType": "off"
            },
            "suspicious": {
                "noAssignInExpressions": "off",
                "noExplicitAny": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "indentStyle": "space",
            "trailingCommas": "es5",
            "semicolons": "always",
            "enabled": true,
            "arrowParentheses": "asNeeded",
            "bracketSameLine": true,
            "bracketSpacing": true,
            "attributePosition": "multiline",
            "quoteProperties": "asNeeded"
        }
    }
}
